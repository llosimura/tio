- filas = arr.length + 1
- columnas = arr[0].length + 1
%table.ten.columns.centered
  - for i in 0...filas
    %tr
    -for j in 0...columnas
      - if ((i == 0) && (j == 0))
        %td 
      -elsif (i == 0)
        -if (j == columnas - 1)
          %td Suma
        -elsif (j != columnas - 2)
          %td Act#{j}
      -elsif (j==0)
        %td Act#{i} 
      -else
        -if arr[i-1][j-1].nil?
        -elsif arr[i-1][j-1].is_a? Float
          %td #{arr[i-1][j-1].round(2)}
        -else
          %td #{arr[i-1][j-1]}